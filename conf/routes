# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /shoes                      controllers.Application.shoes(command: String)
GET     /profile                    controllers.Application.profile(username: String)
GET     /display                    controllers.Application.display(shoe: String)
POST    /                           controllers.Application.postLogin()
GET     /newcontact                 controllers.Application.newContact(username: String ?= "")
GET     /delete                     controllers.Application.deleteContact(username: String ?= "")
POST    /newcontact                 controllers.Application.postContact()
GET     /shoppingcart               controllers.Application.shoppingCart(name: String)
GET     /checkout                   controllers.Application.checkout()
GET     /sort                       controllers.Application.sort(command: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
