# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /shoes                      controllers.Application.shoes()
GET     /profile                    controllers.Application.profile(username: String)
POST    /                           controllers.Application.postLogin()
GET     /newcontact                 controllers.Application.newContact(username: String ?= "")
GET     /delete                     controllers.Application.deleteContact(username: String ?= "")
POST    /newcontact                 controllers.Application.postContact()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
